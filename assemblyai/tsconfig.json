{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./app",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@assets": ["./_assets"],
      "@assets/*": ["./_assets/*"],
      "@components": ["./_shared/components"],
      "@components/*": ["./_shared/components/*"],
      "@utils": ["./_shared/utils"],
      "@utils/*": ["./_shared/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
